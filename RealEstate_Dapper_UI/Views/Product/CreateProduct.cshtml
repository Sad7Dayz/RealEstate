@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid" pt-4 px-4>
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Add New Ad Page</h6>
                <form method="post">
                    <label>Ad Title</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>City</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>District</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>category</label>
                    @Html.DropDownListFor(x => x.ProductCategory, (List<SelectListItem>) ViewBag.v, new {@class="form-control"})
                    <br />
                    <label>Price</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>type</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Cover Photo</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Address</label>
                    <textarea asp-for="Address" class="form-control" rows="5"></textarea>
                    <br />
                    <button class="btn btn-primary">Save Ad</button>
                </form>
            </div>
        </div>
    </div>
</div>