@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

@* shard - Components - 각각의 폴더안에 defalut.cshtml *@

<section class="w3l-cover-3">
    <div class="cover top-bottom">
        <div class="container">
            <div class="middle-section text-center">
                <div class="section-width">
                    <p>It's great to be home!</p>
                    <h2>Find a property today</h2>
                    <div class="most-searches">
                        <h4>Most Searches</h4>
                        <ul>
                            <li><a href="#link">Villa</a></li>
                            <li><a href="#link">Apartment</a></li>
                            <li><a href="#link">Private house</a></li>
                        </ul>
                    </div>
                    <form asp-action="PartialSerach" asp-controller="Default" class="w3l-cover-3-gd" method="post">
                        <input type="search" name="searchKeyValue" placeholder="Enter keywords" required>
                        <span class="input-group-btn">
                            <select class="btn btn-default" name="propertyCategoryId" required>
                                <option selected="">Office</option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.CategoryID">@item.CategoryName</option>
                                }
                            </select>
                        </span>
                        <span class="input-group-btn">
                            <select class="btn btn-default" name="city" required>
                                <option selected="">Select Country</option>
                                <option>Istanbul</option>
                                <option>Paris</option>
                                <option>Milano</option>
                                <option>Roma</option>
                                <option>Lyon</option>
                                <option>Munih</option>
                                <option>Berlin</option>
                                <option>Sofya</option>
                                <option>lzmir</option>
                            </select>
                        </span>
                        <button type="submit" class="btn-primary">Search</button>
                    </form>
                </div>
                <section id="bottom" class="demo">
                    <a href="#bottom"><span></span>Scroll</a>
                </section>
            </div>
        </div>
    </div>
</section>


